<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="prestashop_cart_tree" model="ir.ui.view">
        <field name="name">prestashop.cart.tree</field>
        <field name="model">prestashop.cart</field>
        <field name="arch" type="xml">
            <tree>
                <field name="external_id"/>
                <field name="date_order"/>
                <field name="partner_id"/>
                <field name="amount_total" sum="Total Tax Included" widget="monetary"/>
                <field name="state" invisible="1"/>
            </tree>
        </field>
    </record>
    <record id="prestashop_cart_form" model="ir.ui.view">
        <field name="name">prestashop.cart.form</field>
        <field name="model">prestashop.cart</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="external_id" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="state" invisible="1"/>
                            <field name="partner_id" context="{'show_address': 1}"/>
                            <field name="partner_invoice_id"/>
                            <field name="partner_shipping_id"/>
                            <field name="date_order"/>
                        </group>
                        <group>
                            <field name="shop_id"/>
                            <field name="shop_group_id"/>
                            <field name="carrier_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lines">
                            <field name="order_line" mode="tree">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="product_uom_qty" string="Ordered Qty"/>
                                    <field name="product_uom"/>
                                    <field name="price_unit"/>
                                    <field name="tax_id"/>
                                    <field name="price_subtotal" widget="monetary"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="cart_total">
                                <field name="amount_untaxed" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                <field name="amount_tax" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                    <label for="amount_total" />
                                </div>
                                <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            </group>
                        </page>
                        <page name="connector" string="Connectors">
                            <field name="prestashop_bind_ids" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="prestashop_cart_action" model="ir.actions.act_window">
        <field name="name">Carts</field>
        <field name="res_model">prestashop.cart</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="prestashop_cart_menu"
        name="Carts"
        parent="sale.sale_menu_root"
        action="prestashop_cart_action"
        sequence="3"/>
</odoo>