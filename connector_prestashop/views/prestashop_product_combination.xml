<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="prestasho_product_combination_form" model="ir.ui.view">
       <field name="model">prestashop.product.combination</field>
       <field name="arch" type="xml">
            <form string="prestashop fields">
                <sheet>
                    <group>
                        <field name="backend_id"/>
                    </group>
                </sheet>
            </form>
       </field>
    </record>

    <record id="prestasho_product_combination_tree" model="ir.ui.view">
        <field name="model">prestashop.product.combination</field>
        <field name="arch" type="xml">
            <tree string="prestashop product">
                <field name="backend_id" string="Backend"/>
                <field name="external_id"/>
                <field name="template_id"/>
                <button name="recompute_prestashop_qty"
                    class="oe_highlight"
                    type="object"
                    string="Export quantity"/>
                <button name="resync"
                    type="object"
                    string="Resync" />
            </tree>
        </field>
    </record>
</odoo>